{
  "name": "hegentopf/php-assert",
  "description": "A lightweight and fluent PHP assertion library for easy and expressive validations.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Michael Helmert",
      "email": "assert@hegentopf.de"
    }
  ],
  "require": {
    "php": ">=5.6",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "Hegentopf\\Assert\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Hegentopf\\Assert\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit tests --colors=always"
  }
}
